---
import '../styles/global.css';
const allPosts = await Astro.glob('../pages/posts/*.md');
import BlogPost from '../components/BlogPost.astro';

// import Navigation from '../components/Navigation.astro';
// import Footer from '../components/Footer.astro';
// import Header from '../components/Header.astro';
// import D3Chart from '../components/D3Chart.astro';

import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Federico Bottarelli //";
const pageSubTitle = "AI Expert, Data Scientist, Software Engineer";
---
<BaseLayout pageTitle={pageTitle} pageSubTitle={pageSubTitle}>
    <!-- posts -->
    <!-- Li ricaviamo in modo dinamico -->
    <p>Welcome to my page! I'm Federico, a Data Science, DataOps, and AI specialist with a deep passion for data and its applications to real-world problems. I'm currently pursuing a Data Science master's degree at Padua University and working as a Junior DataOps Engineer for an Italian company.</p>
    {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
    
</BaseLayout>
